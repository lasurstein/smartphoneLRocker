<com.example.smartphonelrocker.DisplayLockView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99F0F0F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="64dp"
        android:background="#FFFFFF"
        android:elevation="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/displayLockAlarmTime"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/big_padding"
            android:layout_marginTop="@dimen/big_padding"
            android:layout_weight="2"
            android:text="00:00"
            style="@style/timer_title"
            android:textColor="@color/black"
            android:textSize="80sp" />

        <TextView
            android:id="@+id/displayLockAlarmName"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/big_padding"
            android:layout_weight="1"
            android:text="ほげほげの時間です!"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/displayLockDisc"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/big_padding"
            android:layout_weight="1"
            android:text="@string/lock_desc"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/imageViewLock"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:src="@drawable/lock_nankinjou" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>

<!--        <Button-->
<!--            android:id="@+id/exitLockButton"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0dp"-->
<!--            android:layout_weight="1"-->
<!--            android:text="@string/exit" />-->

    </LinearLayout>

</com.example.smartphonelrocker.DisplayLockView>
