<com.example.smartphonelrocker.PlayRockView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99F0F0F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="64dp"
        android:background="#FFFFFF"
        android:elevation="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playRockAlarmTime"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/big_padding"
            android:layout_marginTop="@dimen/big_padding"
            android:layout_weight="2"
            android:text=""
            style="@style/timer_title"
            android:textColor="@color/black"
            android:textSize="80sp" />

        <TextView
            android:id="@+id/playRockAlarmName"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/big_padding"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/black"
            android:textSize="28sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/playRockAlarmDisc"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/big_padding"
            android:layout_weight="1"
            android:text="@string/rock_desc"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/imageViewRock"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:src="@drawable/music_punk_rocker" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

</com.example.smartphonelrocker.PlayRockView>
